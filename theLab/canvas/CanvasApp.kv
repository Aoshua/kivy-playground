<CanvasExample7@BoxLayout>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: self.size


<CanvasExample6>:
    # Button:
    #     canvas: 
    #         #.before move the canvas under the button
    #         Rectangle:
    #     text: "A"
    #     pos: 100, 100

    # Below, with/without setting size makes a big difference
    # because CanvasExample6 inherits Widget not Layout
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color: 
                    rgb: 0, 1, 0
                Rectangle:
                    size: self.size #self being widget
        RelativeLayout:
            canvas:
                Color: 
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size #self being widget
                    #pos: self.pos #need if nested in a Widget (rather than RelativeLayout)


<CanvasExample1@Widget>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Line:
            circle: (200, 200, 100)
        Line:
            ellipse: (500, 300, 100, 200)
            width: 2.
        Color: 
            rgb: 0, 0, 1
        Rectangle:
            pos: 200, 500
            size: 200, 100

<CanvasExample2@Widget>:
    canvas:
        Line: 
            points: (0, self.height/2, self.width, self.height/2)
        Line:
            points: (self.width/2, 0, self.width/2, self.height)


<CanvasExample3@Widget>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Line:
            circle: (200, 200, 100) #center_x, center_y, radius
            width: 2
        Color:
            rgba: 1, 0, 0, .3
        Line:
            ellipse: (200, 200, 100, 200) #center_x, center_y, radius_x, radius_y
            width: 4
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (800, 100, 300, 200) # x, y, w, h
            width: 2

<CanvasExample4>:
    Button:
        pos: 100, 400
        text: "Move Right"
        on_press: root.onButtonAClick()
    Button:
        pos: 200, 400
        text: "Move Left"
        on_press: root.onButtonBClick()