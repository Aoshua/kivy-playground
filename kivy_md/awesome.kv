#:kivy 2.0.0

Screen:

    MDCard:
        size_hint: None, None
        size: dp(300), dp(400)
        pos_hint: {"center_x": .5, "center_y": .5 }
        elevation: 10
        padding: dp(25)
        spacing: dp(25)
        orientation: "vertical"
        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: dp(40)
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: dp(15)
        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: "200dp"
            font_size: dp(18)
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: "200dp"
            font_size: dp(18)
            pos_hint: {"center_x": 0.5}
            password: True
        MDRectangleFlatButton:
            text: "LOGIN"
            font_size: dp(12)
            pos_hint: {"center_x": .5}
            on_press: app.logger()
        MDRectangleFlatButton:
            text: "CLEAR"
            font_size: dp(12)
            pos_hint: {"center_x": .5}
            on_press: app.clear()
        